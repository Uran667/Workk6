<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_fone"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нажми сюда"
        app:layout_constraintTop_toBottomOf="@id/inter"
        app:layout_constraintEnd_toEndOf="@id/inter"
        android:textColor="@color/orange"
        android:textSize="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/click"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Забыли пароль?"
        app:layout_constraintTop_toBottomOf="@id/inter"
        app:layout_constraintStart_toStartOf="@id/inter"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:id="@+id/forget"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Войти"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:id="@+id/inter"
        android:backgroundTint="@color/gray"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Введите password"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gmail"
        android:id="@+id/password"
        android:background="@color/white"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Введите gmail"
        android:inputType="textEmailAddress"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Vypolnite"
        android:id="@+id/gmail"
        android:background="@color/white"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выполните вход или зарегестрируйтесь!"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor ="@color/white"
        android:id="@+id/Vypolnite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Welcome"  />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать!"
        android:layout_marginTop="300dp"
        android:textSize="25dp"
        android:textColor ="@color/white"
        android:id="@+id/Welcome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Vhod"  />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вход"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:textColor ="@color/white"
        android:id="@+id/Vhod"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>